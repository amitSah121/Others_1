<FigureDef>:
	padding: 10,10,10,10
	orientation: "vertical"
	size_hint_y: None
	height: self.minimum_height

	BoxLayout:
		orientation: "vertical"
		size_hint_y: None
		height: self.minimum_height
		StackLayout:
			size_hint_y: None
			height: "60"
			bg_color: 1,1,1	
		    canvas.before:
		        Color:
		            rgb: blue_1
		        Rectangle:
		            pos: self.pos  
		            size: self.size
			padding: 10,10,10,10
			spacing: 10
			FigLabel:
				text: root.table_name
				size_hint: None,None
				size: self.texture_size
				padding: 10,10,10,10
				bg_color: white
				color: black


			FigButton:
				text: "Done"
				size_hint: None,None
				size: self.texture_size
				padding: 10,10,10,10
				background_color: blue_4
				color: white
				on_press: root.draw_figure()

		StackLayout:
			size_hint_y: None
			height: self.minimum_height
			bg_color: 1,1,1
			id: x_stack
		    canvas.before:
		        Color:
		            rgb: blue_2
		        Rectangle:
		            pos: self.pos  
		            size: self.size
			padding: 10,10,10,10
			spacing: 10
			FigLabel:
				text: "X-Axis"
				size_hint: None,None
				size: self.texture_size
				padding: 10,10,10,10
				bg_color: white
				color: black
		    FigSpinner:
		        id: my_x_spinner
		        text: 'None'
		        values: self.list
		        size_hint: None, None
		        size: self.texture_size
		        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		        padding: 10,10,10,10
		        on_text: root.x_selected(self)
		        bg_color: blue_1


		StackLayout:
			size_hint_y: None
			height: self.minimum_height
			height: "60"
			bg_color: 1,1,1		
			id: y_stack
		    canvas.before:
		        Color:
		            rgb: blue_2
		        Rectangle:
		            pos: self.pos  
		            size: self.size
			padding: 10,10,10,10
			spacing: 10
			FigLabel:
				text: "Y-Axis"
				size_hint: None,None
				size: self.texture_size
				padding: 10,10,10,10
				bg_color: white
				color: black
		    FigSpinner:
		        id: my_y_spinner
		        text: 'None'
		        values: self.list
		        size_hint: None, None
		        size: self.texture_size
		        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		        padding: 10,10,10,10
		        on_text: root.y_selected(self)
		        bg_color: blue_1

<FigLabel>:
	bg_color: 1,1,1,1
	canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos  
            size: self.size

<FigButton>:
	background_normal: ""
	background_color: white



<FigSpinner>:
    background_normal: ""
    background_color: grey_1
    color: black


<FigSpinnerDropdown>:


<FigSpinnerOptions>:
	size_hint: None,None
	size: self.texture_size
	padding: 10,10,10,10
