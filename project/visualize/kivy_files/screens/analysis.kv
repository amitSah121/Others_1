
<AnalysisScreen>:
    BoxLayout:
    	orientation: "vertical"
    	canvas.before:
	        Color:
	            rgb: white
	        Rectangle:
	            pos: self.pos  
	            size: self.size
    	StackLayout:
    		size_hint_y: None
			height: self.minimum_height
			bg_color: 1,1,1	
		    canvas.before:
		        Color:
		            rgb: blue_3
		        Rectangle:
		            pos: self.pos  
		            size: self.size
    		padding: 10,10,10,10
    		bg_color: blue_3
	        Nav1Button:
	        	text: "Home"
	        	bg_color: blue_3
	        	color: white
	        	on_press: root.manager.current = 'home'
	        Nav1Button:
	        	text: "Setup"
	        	bg_color: blue_3
	        	color: white
	        	on_press: root.manager.current = 'setup'
	        Nav1Button:
	        	text: "Analysis"

	    StackLayout:
    		size_hint_y: None
			height: self.minimum_height
			bg_color: 1,1,1	
		    canvas.before:
		        Color:
		            rgb: blue_4
		        Rectangle:
		            pos: self.pos  
		            size: self.size
    		padding: 5,5,5,5
    		bg_color: blue_4
	        Nav2Button:
	        	text: "Add figure"
	        	bg_color: blue_4
	        	color: white
	        	on_press: root.add_figure()
	    BoxLayout:
	    	ScrollView:
	    		BoxLayout:
			    	orientation: "vertical"
			    	id: figure_info
			    	size_hint_y: None
			    	height: self.minimum_height

